<launch> <!-- basic launch file -->
    <arg name="robot" default="localhost" doc="hostname of the turtlebot to run code on"/>

    <machine name="turtlebot" env-loader="/home/msr/install/share/nuturtle_control/loader.sh" 
        user="msr" address="$(arg robot)"/>

    <node pkg="rosserial_python" type="serial_node.py" name="serial_node" machine="turtlebot">
        <param name="port" value="/dev/ttyACM0"/>
        <param name="baud" value="115200"/>
    </node>
</launch>